{
    "name": "@freshworks/crayons-visual-regression",
    "repository": {
        "type": "git",
        "url": "https://github.com/freshworks/crayons.git"
    },
    "version": "1.0.0",
    "description": "Freshworks `Crayons Visual Regression` is a Testing Suite to visually test web components. It uses Puppeteer, Jest and Jest-Screenshot libraries. The library runs lighting fast tests via ultra optimized scripts. ",
    "main": "__tests__",
    "keywords": [
        "crayons-visual-regression",
        "puppeteer",
        "jest",
        "jest-screenshot",
        "jest-ui-regression-reporter"
    ],
    "files": [
        "**/*/**"
    ],
    "publishConfig": {
        "access": "public"
    },
    "license": "MIT",
    "author": "Freshworks Inc",
    "scripts": {
        "checkIfVisualRegressionExists":"node checkIfVisualRegressionExists.js",
        "checkIfTestsSnapshotsExists":"node checkIfSnapshotsExists.js",
        "test": "npm run checkIfTestsSnapshotsExists && npm run test-each && npm run checkIfVisualRegressionExists",
        "test-each": "jest --detectOpenHandles --maxWorkers=50% --testPathPattern=./__spec_tests__/__tests__",
        "test-all": "jest --maxWorkers=50% --testPathPattern=./__all_tests__/__tests__",
        "update-snapshots:all": "jest -u --testPathPattern=./__all_tests__/__tests__",
        "update-snapshots:each": "jest -u --testPathPattern=./__spec_test/__tests__",
        "update-snapshots:spec": "jest -u",
        "build": "rm -rf ./puppeteer.data.store"
    },
    "jest": {
        "collectCoverage": false,
        "testEnvironment": "node",
        "moduleFileExtensions": [
            "js"
        ],
        "testMatch": [
            "**/__tests__/*.js"
        ],
        "transform": {
            ".*\\.js$": "babel-jest"
        },
        "modulePaths": [
            "node_modules"
        ],
        "reporters": [
            "default",
            "jest-screenshot/reporter",
            "jest-github-reporter"
        ],
        "setupFilesAfterEnv": [
            "./jest-setup.js"
        ]
    },
    "devDependencies": {
        "babel-jest": "^25.1.0",
        "babel-polyfill": "^6.26.0",
        "babel-preset-env": "^1.6.1",
        "child_process": "^1.0.2",
        "fs": "^0.0.1-security",
        "jest": "^25.1.0",
        "jest-circus": "^27.5.1",
        "jest-screenshot": "^0.3.5",
        "puppeteer": "^13.5.1"
    }
}
